form#classes-edition-form(style="display:none;")
	input#classes-edition-id(type="hidden")
	//- span.titre Modifier une classroom :
	p
		//- label.libelle(for="classes-edition-course") Cours :
		span#classes-edition-course.data.text-simple(title='Cours')
		//- label.libelle(for="classes-edition-subject") Sujet :
		input#classes-edition-subject.data.text-simple(
			title='Sujet'
			placeholder='Sujet'
			type="text")
		//- label.libelle(for="classes-edition-startDate") le :
		input#classes-edition-startDate.data.text-simple(
			title='Date de départ'
			placeholder='Le'
			type="text")
		//- label.libelle(for="classes-edition-startHour") à :
		input#classes-edition-startHour.time.data.text-simple(
			title='Heure de départ'
			placeholder='à'
			type="text")
		//- label.libelle(for="classes-edition-duration") Durée :
		input#classes-edition-duration.time.data.text-simple(
			title='Sujet'
			placeholder='Sujet'
			type="text")
		//- label.libelle(for="classes-edition-active") Actuellement active :
		span#classes-edition-active.data.text-area(
			title='Active ?'
			type="text")
	input#classes-edition-submit-update(
		type="submit"
		value="Mettre à jour")
	input#classes-edition-submit-delete(
		type="submit"
		value="Supprimer")