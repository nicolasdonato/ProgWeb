@import mixins

html
	width 100%
	height 100%
	
	body
		width 100%
		height 100%
		margin 			0
		padding 		0
		display flex
		flex-direction column
		-webkit-animation opacity 1s ease
		animation opacity 1s ease

		header
			flex 1
			display flex
			overflow hidden

			#classes-details-submit-leave
				flex 1

			#classes-details-submit-end
				flex 1

			#logout
				flex 1

		main
			flex 30
			display 			flex
			flex-wrap 			wrap
			justify-content 	space-between

			#left
				display flex
				flex 1
				
				#courses-div
					flex 1
					// animation show 3s ease
					display flex
					flex-wrap wrap
					flex-direction column
					justify-content space-between

					#courses-list-div
						flex 1

					#courses-creation-form
						flex 1

					#courses-details-form
						flex 1

					#courses-edition-form
						flex 1

				#geochat
					flex 1
					display flex
					flex-direction column

					#geo
						flex 1
						max-height 200px
						
						#carte
							height 100%
						
					#out
						flex 1
						overflow auto
						height 100px
						word-wrap break-word

					#in
						flex 1
						max-height 20px

			main#center
				flex 3
				display 			flex
				flex-wrap 			wrap
				align-items 		center
				justify-content 	center
				
				form
					input
						margin 2px
						border 1px solid black
						border-radius 5px
					&.fail input
						border-color red
						
				#cams
					flex 10 0 256px
					display flex
					flex-wrap wrap
					align-items center
					justify-content center
					overflow hidden
					
					.cam
						video
							flex 1 0 50px
							width 256px
							height 150px
			
			#right
				flex 1
				display flex

				#classes-div
					flex 1
					display flex
					flex-wrap wrap
					flex-direction column
					justify-content space-between
					#classes-list
						flex 1
					#classes-creation-form
						flex 1
					#classes-details-form
						flex 1
					#classes-edition-form
						flex 1
